<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        tools:context=".ui.plant_individual.IndivPlantActivity">

        <ImageButton
            android:id="@+id/returnButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:src="@drawable/icons_filled_back_button_v3" />

        <TextView
            android:id="@+id/plant_individual_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/activity_horizontal_margin"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/roboto_black"
            android:textColor="@color/dark_navy"
            android:textSize="35sp"
            android:textAlignment="center"
            android:text="@string/plant1"
            android:gravity="center"
            tools:ignore="MissingConstraints" />

        <ImageView
            android:id="@+id/plantImage"
            android:layout_marginVertical="@dimen/activity_horizontal_margin"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/plant_individual_title"
            android:src="@drawable/bell_peppers_individual_page" />

        <TextView
            android:id="@+id/plant_individual_about_me"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/plantImage"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/roboto_bold"
            android:textColor="@color/dark_navy"
            android:textSize="25sp"
            android:textAlignment="center"
            android:text="@string/plant_individual_about_me"
            android:paddingBottom="10dp"
            android:gravity="center"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/plant_individual_season"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/plant_individual_about_me"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/roboto_medium"
            android:gravity="center"
            android:text="@string/plant_individual_season"
            android:textAlignment="center"
            android:textColor="@color/turquoise"
            android:textSize="20sp"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/plant_individual_season_detail"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/plant_individual_season"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/avenir"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:text="SPACE 1"
            android:textAlignment="center"
            android:textColor="@color/turquoise"
            android:textSize="15sp"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/plant_individual_plant_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/plant_individual_season_detail"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/roboto_medium"
            android:textColor="@color/turquoise"
            android:textSize="20sp"
            android:textAlignment="center"
            android:text="@string/plant_individual_plant_type"
            android:gravity="center"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/plant_individual_plant_type_detail"
