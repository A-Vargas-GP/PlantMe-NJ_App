<?xml version="1.0" encoding="utf-8"?>
<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="-127dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        tools:context=".ui.home.HomeFragment">

        <TextView
            android:id="@+id/title_home"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:text="@string/home_screen_title"
            android:textAlignment="center"
            android:textColor="@color/turquoise"
            android:textSize="25sp"
            tools:ignore="MissingConstraints" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_below="@id/title_home"
            android:layout_centerHorizontal="true"
            android:src="@drawable/plantme_inverted_color" />

        <TextView
            android:id="@+id/location_title"
            android:background="@drawable/rounded_corner"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imageView"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:text="@string/home_weather_screen"
            android:textAlignment="center"
            android:textColor="@color/turquoise"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/location_text"
            android:freezesText="true"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/location_title"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:text="Testing"
            android:textAlignment="center"
            android:textColor="@color/turquoise"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/dateTime_title"
            android:background="@drawable/rounded_corner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="20dp"
            android:layout_below="@id/location_text"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:text="@string/home_weather_datetime"
            android:textAlignment="center"
            android:textColor="@color/turquoise"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/dateTime_text"
            android:freezesText="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_below="@id/dateTime_title"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:text="Testing"
            android:textAlignment="center"
            android:textColor="@color/turquoise"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/condition_title"
            android:background="@drawable/rounded_corner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="20dp"
            android:layout_below="@id/dateTime_text"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:text="@string/home_weather_conditions"
            android:textAlignment="center"
            android:textColor="@color/turquoise"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/condition_text"
            android:freezesText="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_below="@id/condition_title"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:text="Testing"
            android:textAlignment="center"
            android:textColor="@color/turquoise"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/temperature_title"
            android:background="@drawable/rounded_corner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="20dp"
            android:layout_below="@id/condition_text"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:text="@string/home_weather_temp"
            android:textAlignment="center"
            android:textColor="@color/turquoise"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/temperature_text"
            android:freezesText="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_below="@id/temperature_title"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:text="Testing"
            android:textAlignment="center"
            android:textColor="@color/turquoise"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/sunrise_title"
            android:background="@drawable/rounded_corner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="20dp"
            android:layout_below="@id/temperature_text"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:text="@string/home_weather_sunrise"
            android:textAlignment="center"
            android:textColor="@color/turquoise"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/sunrise_text"
            android:freezesText="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_below="@id/sunrise_title"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:text="Testing"
            android:textAlignment="center"
            android:textColor="@color/turquoise"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/sunset_title"
            android:background="@drawable/rounded_corner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="20dp"
            android:layout_below="@id/sunrise_text"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:text="@string/home_weather_sunset"
            android:textAlignment="center"
            android:textColor="@color/turquoise"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/sunset_text"
            android:freezesText="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_below="@id/sunset_title"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:text="Testing"
            android:textAlignment="center"
            android:textColor="@color/turquoise"
            android:textSize="18sp" />
    </RelativeLayout>
</ScrollView>