<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.plantme_nj.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_ar"
        android:name="com.example.plantme_nj.ui.ar_page.ARPageFragment"
        android:label="AR"
        tools:layout="@layout/fragment_ar_page" />

    <fragment
        android:id="@+id/navigation_plants"
        android:name="com.example.plantme_nj.ui.plant_suggestion.PlantSuggestionFragment"
        android:label="Plant Suggestion"
        tools:layout="@layout/fragment_plant_suggestion" />

    <fragment
        android:id="@+id/navigation_type_of_plant"
        android:name="com.example.plantme_nj.ui.plant_types.PlantTypesFragment"
        android:label="Plant Types"
        tools:layout="@layout/fragment_plant_types" />

    <fragment
        android:id="@+id/navigation_more_options"
        android:name="com.example.plantme_nj.ui.more_options.MoreOptionsFragment"
        android:label="More Options"
        tools:layout="@layout/fragment_more_options" />
</navigation>